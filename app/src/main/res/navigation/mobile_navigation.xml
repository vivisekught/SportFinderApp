<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_chat"
        android:name="com.example.sportfinderapp.presentation.fragments.chat.ChatFragment"
        android:label="Chats"
        tools:layout="@layout/fragment_chat" />
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.sportfinderapp.presentation.fragments.home.HomeFragment"
        android:label="@string/list_of_trainings"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_trainingFragment"
            app:destination="@id/trainingFragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.sportfinderapp.presentation.fragments.search.SearchFragment"
        android:label="Find what you want"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/trainingFragment"
        android:name="com.example.sportfinderapp.presentation.fragments.training.TrainingFragment"
        tools:layout="@layout/fragment_training"
        android:label="Training">
        <argument
            android:name="Training"
            app:argType="com.example.sportfinderapp.domain.Training" />
        <action
            android:id="@+id/action_trainingFragment_to_fullscreenTrainingImageFragment"
            app:destination="@id/fullscreenTrainingImageFragment" />
        <action
            android:id="@+id/action_trainingFragment_to_trainingAllImagesFragment"
            app:destination="@id/trainingAllImagesFragment" />
    </fragment>
    <fragment
        android:id="@+id/fullscreenTrainingImageFragment"
        android:name="com.example.sportfinderapp.presentation.fragments.FullscreenTrainingImageFragment"
        android:label="fragment_fullscreen_training_image"
        tools:layout="@layout/fragment_fullscreen_training_image" >
        <argument
            android:name="imageId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/trainingAllImagesFragment"
        android:name="com.example.sportfinderapp.presentation.fragments.TrainingAllImagesFragment"
        android:label="fragment_training_all_images"
        tools:layout="@layout/fragment_training_all_images" >
        <action
            android:id="@+id/action_trainingAllImagesFragment_to_fullscreenTrainingImageFragment"
            app:destination="@id/fullscreenTrainingImageFragment" />
    </fragment>
</navigation>